<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient_color_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.gx.timer.widget.CircleTimerView
                android:id="@+id/v_circle_time"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="300dp"/>

            <com.gx.timer.widget.CircleTimerSegmentView
                android:id="@+id/v_circle_time_segment"
                android:layout_gravity="center"
                android:layout_width="270dp"
                android:layout_height="270dp"/>

            <TextView
                android:id="@+id/tv_time"
                android:text="00:15:00"
                android:textColor="@color/ko_white"
                android:layout_gravity="center"
                android:textSize="56sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_action"
            android:text="暂停"
            android:textSize="20sp"
            android:textColor="@color/ko_white"
            android:background="@mipmap/btn_stop_pink"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>